generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [citext, pgcrypto, uuidOssp(map: "uuid-ossp")]
}

model User {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  name     String  @db.VarChar(128)
  email    String  @unique @db.Citext
  password String  @db.VarChar(255)
  inactive Boolean @default(false) @db.Boolean

  insertedAt DateTime @default(now()) @map("inserted_at") @db.Timestamptz(0)
  updatedAt  DateTime @updatedAt @map("updated_at") @db.Timestamptz(0)

  @@map("users")
}
